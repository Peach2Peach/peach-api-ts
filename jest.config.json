{
  "rootDir": "./",
  "moduleFileExtensions": ["js", "ts"],
  "clearMocks": true,
  "maxWorkers": "50%",
  "collectCoverage": false,
  "coverageReporters": ["lcov", "text-summary"],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "transform": {
    "^.+\\.[t|j]s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.ts"]
}